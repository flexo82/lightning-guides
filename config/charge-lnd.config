[discourage-routing-out-of-balance]
chan.max_ratio = 0.05
strategy = static
fee_ppm = 1500

[discourage-routing-proportional]
chan.max_ratio = 0.30
chan.min_ratio = 0.20
strategy = proportional
min_fee_ppm = 1
max_fee_ppm = 500

[discourage-routing-proportional]
chan.max_ratio = 0.20
chan.min_ratio = 0.10
strategy = proportional
min_fee_ppm = 1
max_fee_ppm = 750


[discourage-routing-proportional-high]
chan.max_ratio = 0.10
chan.min_ratio = 0.05
strategy = proportional
min_fee_ppm = 1
max_fee_ppm = 1000

[encourage-routing-to-balance]
chan.min_ratio = 0.97
strategy = proportional
min_fee_ppm = 1
max_fee_ppm = 200

[proportional]
# Set fees proportionally to how the channel is funds are balanced

strategy = proportional
min_fee_ppm = 1
max_fee_ppm = 350

[leafnode]
# Non-routing channels have a constant fee

chan.private = true

strategy = static
fee_ppm = 100
