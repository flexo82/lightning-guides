[default]
# 'default' is special, it is used if no other policy matches a channel

strategy = static
time_lock_delta = 30
base_fee_msat = 0
fee_ppm = 2500

[mydefaults]
# no strategy, so this only sets some defaults

base_fee_msat = 0
fee_ppm = 2500
min_fee_ppm_delta = 10
time_lock_delta = 30
min_htlc_msat = 1000

